<!DOCTYPE html>
<html>
  <head>
    <title>Musicstudio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container-fluid">
      <div class="row header">
        <h2>MusicStudio</h2>
        <% if user_signed_in? %>
          <%= button_to "SignOut",destroy_user_session_path,class: 'btn btn-primary',method: :delete%>
        <%else%>
          <%= button_to "SignUp",new_user_registration_path,class: 'btn btn-primary', id: 'signup-id' ,method: :get%>
          <%= button_to "SignIn",new_user_session_path,class: 'btn btn-primary', id: 'signin-id'%>
        <%end%>
        <%= button_to "Post a new MusicStudio",new_studio_path, class:"btn btn-primary",method: :get %>
      </div>
      </br>
      </br>
      <%= yield %>
    </div>
  </body>
</html>
